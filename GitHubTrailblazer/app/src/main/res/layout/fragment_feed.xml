<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary4">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">
        <Spinner
            style="@style/SpinnerAsEditText"
            android:id="@+id/feed_filter_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary1"
            android:paddingHorizontal="5dp"
            />
        <HorizontalScrollView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
            <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/feed__tags">
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/feed_swipeToRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">
                <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/feed__list">
                </LinearLayout>
                <com.example.githubtrailblazer.components.LoadingSpinner
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@drawable/redo_alt_solid"
                        android:contentDescription="Loading"
                        android:id="@+id/feed__loading"
                        android:layout_marginVertical="10dp"/>
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>