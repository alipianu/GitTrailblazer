<?xml version="1.0" encoding="utf-8"?>
<merge  xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_search"
            android:layout_marginVertical="10dp">
        <com.example.githubtrailblazer.components.SearchBar
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:drawableLeft="@drawable/search_solid"
                android:drawablePadding="6dp"
                android:paddingHorizontal="8dp"
                android:textColor="@color/secondary1"
                android:inputType="text"
                android:textSize="12sp"
                android:maxLines="1"
                android:id="@+id/searchbar"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:background="@android:color/transparent"
                android:imeOptions="actionGo"
                android:textCursorDrawable="@drawable/searchbar_cursor"
                android:layout_weight="1"
                android:minWidth="100dp"/>
            <com.example.githubtrailblazer.components.BoundedHorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:bounded_width_ratio="0.7">
            <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:id="@+id/newtag_container"
                    android:maxWidth="100dp">
            </LinearLayout>
        </com.example.githubtrailblazer.components.BoundedHorizontalScrollView>
    </LinearLayout>
</merge>