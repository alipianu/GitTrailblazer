<?xml version="1.0" encoding="utf-8"?>
<com.git_trailblazer.v1.components.searchbar.SearchBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_search"
        android:layout_marginVertical="10dp"
        android:id="@+id/searchbar">
    <com.git_trailblazer.v1.components.searchbar.SearchBarEditText
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:drawableLeft="@drawable/search_solid"
            android:drawablePadding="6dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/secondary1"
            android:inputType="text"
            android:textSize="12sp"
            android:maxLines="1"
            android:id="@+id/searchbar_edit"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:background="@android:color/transparent"
            android:imeOptions="actionGo"
            android:textCursorDrawable="@drawable/searchbar_cursor"
            android:layout_weight="1"
            android:minWidth="100dp"/>
    <com.git_trailblazer.v1.components.searchbar.BoundedHorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            app:bounded_width_ratio="0.7">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/newtag_container"
            android:maxWidth="100dp">
    </LinearLayout>
    </com.git_trailblazer.v1.components.searchbar.BoundedHorizontalScrollView>
</com.git_trailblazer.v1.components.searchbar.SearchBar>
