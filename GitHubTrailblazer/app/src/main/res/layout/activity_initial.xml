<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stars"
    tools:context=".InitialActivity">


    <TextView
        android:id="@+id/initial_app_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="GitHub Trailblazer"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        />

    <ImageView
        android:id="@+id/initial_app_logo_iv"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/initial_app_name_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/github_logo"
        />

    <Button
        android:id="@+id/initial_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/initial_login_btn"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_2"
        android:padding="20dp"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:text="Create Account"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/initial_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_1"
        android:padding="20dp"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:text="Login"
        android:textColor="@android:color/black"
        />






    
</RelativeLayout>

