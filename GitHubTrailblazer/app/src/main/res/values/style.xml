<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="QuestionnaireButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/topic_toggle_selector</item>
        <item name="android:textColor">@color/topic_toggle_text</item>
    </style>

    <style name="SpinnerAsEditText" parent="@android:style/Widget.Spinner">
        <item name="android:background">@android:drawable/edit_text</item>
    </style>

    <style name="PopupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>
</resources>
